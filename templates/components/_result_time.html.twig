{% if result.finished %}
    {% if not result.forfeited %}
        {% set time_diff = result.startedAt.diff(result.finishedAt) %}
        {% set hours = time_diff.h + (time_diff.days * 24) %}
        {{ (hours ? hours ~ ':' : '') ~ time_diff|date('%I:%S') }}
    {% else %}
        <span class="text-danger">Forfeit</span>
    {% endif %}
{% else %}
    Racing...
{% endif %}
