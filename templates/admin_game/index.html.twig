{% extends 'admin_base.html.twig' %}

{% block title %}{{ parent() }} - Game index{% endblock %}

{% block admin_body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Logo</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.name }}</td>
                <td>{{ game.logo }}</td>
                <td>{{ game.slug }}</td>
                <td>
                    <a href="{{ path('admin_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('admin_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_game_new') }}">Create new</a>
{% endblock %}
