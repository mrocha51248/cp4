{% extends 'admin_base.html.twig' %}

{% block title %}{{ parent() }} - Game{% endblock %}

{% block admin_body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ game.logo }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ game.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_game_index') }}">back to list</a>

    <a href="{{ path('admin_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('admin_game/_delete_form.html.twig') }}
{% endblock %}
