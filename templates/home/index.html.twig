{% extends 'base.html.twig' %}

{% block body %}
<main class="main-home text-center">
    <h1>CP4</h1>
    <hr>

    <h2>Leaderboard</h2>
    <div class="container d-flex flex-wrap justify-content-center align-items-start gap-1">
        {% for category in categories %}
        <table class="table table-dark table-sm table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th scope="col" colspan="1000">
                        <div>{{ category.game.name }}</div>
                        <div>{{ category.name }}</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for score in category.userScores[:5] %}
                <tr>
                    <td class="cell-shrink ps-2">{{ score.elo }}</td>
                    <td>{{ score.user.name }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endfor %}
    </div>
    <hr>

    <h2>Top Games</h2>
    <div class="container game-card-container">
        {% for game in games %}
        {% include "components/_game_card.html.twig" %}
        {% endfor %}
    </div>
</main>
{% endblock %}
