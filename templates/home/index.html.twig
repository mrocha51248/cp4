{% extends 'base.html.twig' %}

{% block body %}
<main class="main-home text-center">
    <h1>CP4</h1>
    <hr>

    <h2>Leaderboard</h2>
    <div class="container d-flex flex-wrap">
        {% for category in categories %}
        <table class="table table-dark table-sm table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col-1" colspan="1000" class="text-center">
                        <div>{{ category.game.name }}</div>
                        <div>{{ category.name }}</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for score in category.userScores %}
                <tr>
                    <td>{{ score.elo }}</td>
                    <td>{{ score.user.name }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endfor %}
    </div>
    <hr>

    <h2>Top Games</h2>
    <div class="container d-flex flex-wrap">
        {% for game in games %}
        {% include "components/_game_card.html.twig" %}
        {% endfor %}
    </div>
</main>
{% endblock %}
